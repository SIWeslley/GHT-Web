/*** ESSENTIAL STYLES ***/
.sf-menu, .sf-menu * {
	margin: 0;
	padding: 0;
	list-style: none;
}
.sf-menu li {
	position: relative;
}
.sf-menu ul {
	position: absolute;
	display: none;
	top: 100%;
	left: 0;
	z-index: 99;
}
.sf-menu > li {
	float: left;
}
.sf-menu li:hover > ul,
.sf-menu li.sfHover > ul {
	display: block;
}

.sf-menu a {
	display: block;
	position: relative;
}
.sf-menu ul ul {
	top: 0;
	left: 100%;
}


/*** DEMO SKIN ***/
.sf-menu {
	float: right;
	margin-bottom: 1em;
}
.sf-menu ul {
	box-shadow: 2px 2px 6px rgba(0,0,0,.2);
	min-width: 12em; /* allow long menu items to determine submenu width */
	*width: 12em; /* no auto sub width for IE7, see white-space comment below */
}
.sf-menu a {		
	padding: .35em 1em;
	text-decoration: none;
	zoom: 1; /* IE7 */
}
.sf-menu a {
	font-family: '55 Roman', Arial, Helvetica, sans-serif;
	color: #FFF;
	font-size: 14px;
	text-transform: uppercase;
}
.sf-menu li {
	/* background: #BDD2FF; */
	white-space: nowrap; /* no need for Supersubs plugin */
	*white-space: normal; /* ...unless you support IE7 (let it wrap) */
	-webkit-transition: background .2s;
	transition: background .2s;
	margin-right:12px;
}
.sf-menu li:last-child {
	margin-right:0px;
}

.sf-menu li.current-menu-item a, .sf-menu li.current-menu-parent a{
	border-top: 2px solid #FFF; /* fallback colour must use full shorthand */
	border-top: 2px solid rgba(255,255,255,1);
	border-bottom: 2px solid #FFF; /* fallback colour must use full shorthand */
	border-bottom: 2px solid rgba(255,255,255,1);
	font-family: '75 Bold', Arial, Helvetica, sans-serif;
	padding: .15em .30em .15em .30em;
}


.sf-menu ul li { /**espaço entre as soluções navigator menu*/
